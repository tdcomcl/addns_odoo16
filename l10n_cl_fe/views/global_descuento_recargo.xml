<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="gdr_view_form" model="ir.ui.view">
        <field name="name">gdr.form</field>
        <field name="model">account.move.gdr</field>
        <field name="arch" type="xml">
            <form string="Global Descuentos Recargos">
                <sheet>
                    <group>
                        <field name="type" />
                        <field name="valor" />
                        <field name="gdr_type" />
                        <field name="gdr_detail" />
                        <field name="impuesto" />
                        <field name="amount_untaxed" />
                        <field name="amount" />
                        <field name="account_id" />
                        <field name="move_id" invisible="1" />
                        <field name="company_id" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
